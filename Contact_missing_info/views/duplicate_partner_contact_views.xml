<odoo>

    <!-- Search View for Duplicate Email Detection -->
    <record id="view_partner_search_duplicate_email" model="ir.ui.view">
        <field name="name">res.partner.search.duplicate.email</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Search Contacts">

                <!-- Duplicate Emails -->
                <filter
                    name="duplicate_email"
                    string="Duplicate Emails"
                    domain="[('email', '!=', False)]"
                    context="{'group_by': 'email'}"/>

                <!-- Optional: Has Email -->
                <filter
                    name="has_email"
                    string="Has Email"
                    domain="[('email', '!=', False)]"/>

            </search>
        </field>
    </record>

<record id="action_partner_duplicate_info" model="ir.actions.act_window">
    <field name="name">Contacts duplicate Info</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">list</field>
    <field name="search_view_id" ref="view_partner_search_duplicate_email"/>
    <field name="context">
        {
            'search_default_duplicate_email': 1
        }
    </field>
</record>

    <!-- Menu -->
    <menuitem
        id="menu_partner_duplicate_info"
        name="Contacts duplicate Info"
        parent="menu_parent"
        action="action_partner_duplicate_info"
        sequence="20"/>
</odoo>
