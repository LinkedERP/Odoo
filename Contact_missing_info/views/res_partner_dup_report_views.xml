<odoo>


    <record id="view_partner_search_duplicate_email" model="ir.ui.view">
        <field name="name">res.partner.search.duplicate.email</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>

                <!-- Filter: Has Email -->
                <filter
                    name="has_email"
                    string="Has Email"
                    domain="[('email', '!=', False)]"/>

                <separator/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter
                        name="group_by_email"
                        string="Email"
                        context="{'group_by': 'email'}"/>
                </group>

            </search>
        </field>
    </record>
<record id="action_partner_duplicate_info" model="ir.actions.act_window">
    <field name="name">Contacts Missing Info</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">list</field>
    <field name="search_view_id" ref="view_partner_search_duplicate_email"/>
</record>

    <!-- Menu -->
    <menuitem
        id="menu_partner_duplicate_info"
        name="Contacts duplicate Info"
        parent="contacts.menu_contacts"
        action="action_partner_duplicate_info"
        sequence="70"/>
</odoo>
