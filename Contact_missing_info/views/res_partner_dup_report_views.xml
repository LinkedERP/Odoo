<odoo>

    <!-- List View -->
    <record id="view_partner_duplicate_info_list" model="ir.ui.view">
        <field name="name">res.partner.duplicate.info.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Contacts duplicate Email, Phone &amp; Company">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <!--<field name="mobile"/>-->
                <field name="company_id"/>
                <field name="country_id"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_partner_duplicate_info" model="ir.actions.act_window">
        <field name="name">Contacts duplicate Info</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_partner_duplicate_info_list"/>
        <!-- <field name="domain">
            [
                ("email", "!=", False),
                ("email", "in", (SELECT email FROM res_partner WHERE email IS NOT NULL GROUP BY email HAVING COUNT(*) > 1))
            ]
        </field> -->
                <field name="arch" type="xml">
            <search>

                <!-- Filter: Has Email -->
                <filter
                    name="has_email"
                    string="Has Email"
                    domain="[('email', '!=', False)]"/>

                <separator/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter
                        name="group_by_email"
                        string="Email"
                        context="{'group_by': 'email'}"/>
                </group>

            </search>
        </field>

    </record>

    <!-- Menu -->
    <menuitem
        id="menu_partner_duplicate_info"
        name="Contacts duplicate Info"
        parent="contacts.menu_contacts"
        action="action_partner_duplicate_info"
        sequence="70"/>
</odoo>
