<odoo>
    <record id="mandatory_field_rule_tree" model="ir.ui.view">
        <field name="name">mandatory.field.rule.tree</field>
        <field name="model">mandatory.field.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
                <field name="field_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="mandatory_field_rule_form" model="ir.ui.view">
        <field name="name">mandatory.field.rule.form</field>
        <field name="model">mandatory.field.rule</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="field_id"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="mandatory_field_rule_action" model="ir.actions.act_window">
        <field name="name">Mandatory Fields</field>
        <field name="res_model">mandatory.field.rule</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="mandatory_field_menu"
              name="Mandatory Fields"
              parent="contacts.menu_contacts"
              action="mandatory_field_rule_action"/>
</odoo>
